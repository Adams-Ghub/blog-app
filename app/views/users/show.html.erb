<div class='specific-user-container'>
    <%=render partial:'shared/user_card', locals:{user:@user}  %>
    <div class='biography-main-container'>
        <h3 class='bio-title'>Bio</h3>
        <p class='bio-text'>        
            <%=@user.bio %>
        <p>
    </div>
    <div>
        <% if(@user.show_most_recent_post.length>0) %>
            <% @user.show_most_recent_post.each do |post|%>
                <%=render partial:'shared/post_card', locals:{post:post} %>
            <%end%>
        <%else %>
        <p>No posts available!!!</p>
        <%end%>
    </div>
    <div class='see-all-post-button-container'>
        <a href='<%=@user.id%>/posts' class='see-all-post-button'>see all posts</a>
        <a href='<%=@user.id%>/posts/new' class='add-post-button'>add post</a>
    </div>
</div>