<div class='sign-up-form-main-container'>
<h2>Sign up</h2>

<div class='sign-up-form-container'>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field name-label-input-container">
  <%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, autocomplete: "name", class:'name-input' %>
</div>

  <div class="field bio-label-input-container">
  <%= f.label :bio %><br />
  <%= f.text_area :bio, autofocus: true, class: 'bio-input' %>
</div>
  <div class="field photo-label-input-container">
  <%= f.label :Photo_url %><br />
  <%= f.text_field :photo, autofocus: true, class: 'photo-url-input' %>
</div>
  <div class="field sign-up-email-label-input-container">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'sign-up-email-input' %>
  </div>

  <div class="field sign-up-password-input-label-container">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'sign-up-password-input' %>
  </div>

  <div class="field sign-up-confirm-password-input-label-container">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'sign-up-password-confirm-input' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'sign-up-button' %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
</div>